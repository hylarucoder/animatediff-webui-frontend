name: CI-Workflow

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest

    strategy:
      matrix:
        node-version: [18.x]

    steps:
    - uses: actions/checkout@v2
    - name: Use Node.js ${{ matrix.node-version }}
      uses: actions/setup-node@v2
      with:
        node-version: ${{ matrix.node-version }}
    - name: Pnpm
      run: npm install -g pnpm
    - name: Install dependencies
      run: pnpm install
    - name: Lint
      run: pnpm lint
    - name: Test
      run: pnpm test
    - name: Build
      run: pnpm build
